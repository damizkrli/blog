{% extends 'base.html.twig' %}

{% block title %}
{{ title }}
{% endblock %}

{% block body %}
    <div class="container mx-auto">
        <h1 style="margin-top: 36px" class="text-5xl text-center mb-8">{{ title }}</h1>

        {% include 'components/_dropdown.html.twig' with {
            options: allCategories
        } only %}

        <div class="flex flew-row flex-wrap justify-evenly mt-8">
            {% for post in posts %}
                {% include '/components/_cards.html.twig' with { post: post } only %}
            {% endfor %}
        </div>
        <div class="navigation flex justify-center mb-8">
            {{ knp_pagination_render(posts) }}
        </div>
    </div>

    <script>
        let titleText = [
            'Le',
            "Blog",
            "d'un",
            'Inconnu'
        ];
        let counter = 0;

        setInterval(function () {
            document.title = titleText[counter % titleText.length];
            counter++;
        }, 2000)
    </script>

{% endblock %}
